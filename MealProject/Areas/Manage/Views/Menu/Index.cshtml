
@{
    ViewData["Title"] = "Index";
}


@model List<MealProject.Models.Menu>

@if (Model != null && Model.Count > 0)
{
    <table class="table table-striped">
        <thead>
            <tr>
                <th>Id</th>
                <th>Image</th>
                <th>Name</th>
                <th>Category Name</th>
                <th>Description</th>
                <th>Price</th>
                <th colspan="2">Actions</th>
            </tr>
        </thead>
        <tbody>
            @foreach (var item in Model)
            {
                <tr>
                    <td>@item.Id</td>
                    <td><img width="70" src="~/assets/images/@item.Image" /></td>
                    <td>@item.Name</td>
                    <td>@(item.Category != null ? item.Category.Name : "")</td>
                    <td>@item.Descriprion</td>
                    <td>@item.Price</td>
                    <td><a asp-controller="Menu" asp-action="Edit" asp-area="Manage" asp-route-id="@item.Id" class="text-info">Edit</a></td>
                    <td><a asp-controller="Menu" asp-action="Delete" asp-area="Manage" asp-route-id="@item.Id" class="text-danger">Delete</a></td>
                </tr>
            }
        </tbody>
    </table>
}
else
{
    <h1 class="display-4">Menu is empty</h1>
}




